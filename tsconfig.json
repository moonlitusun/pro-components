{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,

    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@dz-web/antd-pro-layout": ["../../packages/layout/src/index.tsx"],
      "@dz-web/antd-pro-form": ["./packages/form/src/index.tsx"],
      "@dz-web/antd-pro-table": ["./packages/table/src/index.tsx"],
      "@dz-web/antd-pro-field": ["./packages/field/src/index.tsx"],
      "@dz-web/antd-pro-skeleton": ["./packages/skeleton/src/index.tsx"],
      "@dz-web/antd-pro-list": ["./packages/list/src/index.tsx"],
      "@dz-web/antd-pro-provider": ["./packages/provider/src/index.tsx"],
      "@dz-web/antd-pro-descriptions": ["./packages/descriptions/src/index.tsx"],
      "@dz-web/antd-pro-utils": ["./packages/utils/src/index.tsx"],
      "@dz-web/antd-pro-card": ["./packages/card/src/index.tsx"],
      "@dz-web/antd-pro-components": ["./packages/components/src/index.tsx"]
    }
  },
  "include": [
    "./tests/setupTests.ts",
    "vitest.config.ts",
    ".dumirc.ts",
    "typings.d.ts",
    "**/src/**/*",
    "**/docs/**/*",
    "scripts/**/*",
    "**/demos",
    ".eslintrc.js",
    "tests",
    "**/fixtures",
    "./tests/no-duplicated.ts",
    "packages/descriptions/src/demos/.tsx"
  ]
}
